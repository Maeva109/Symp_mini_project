<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="mb-3">
                    {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button class="btn btn-success w-100">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
